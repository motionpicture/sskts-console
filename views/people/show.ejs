<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">会員詳細</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/people">会員検索</a>
                    </li>
                    <li class="breadcrumb-item active">会員詳細</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <% if (messages.message) { %>
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5>
                <i class="icon fa fa-check"></i> Congraturations!</h5>
            <%= messages.message %>
        </div>
        <% } %>

        <% if (message) { %>
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%- message.replace(/\n/g, '<br>') %>
        </div>
        <% } %>

        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-dark card-outline">
                    <div class="card-body box-profile">
                        <!-- <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle" src="../../dist/img/user4-128x128.jpg"
                                        alt="User profile picture">
                                </div> -->

                        <h3 class="profile-username text-center">
                            <%= person.givenName %>
                            <%= person.familyName %>
                        </h3>

                        <p class="text-muted text-center">
                            <%= person.memberOf.membershipNumber %>
                        </p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Orders</b> <a class="float-right" id="orderCount"></a>
                            </li>
                        </ul>

                        <!-- <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a> -->
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <!-- About Me Box -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">About</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fa fa-phone mr-1"></i> Telephone</strong>
                        <p class="text-muted">
                            <%= person.telephone %>
                        </p>
                        <hr>

                        <strong><i class="fa fa-envelope mr-1"></i> Email</strong>
                        <p class="text-muted">
                            <%= person.email %>
                        </p>
                        <hr>

                        <strong><i class="fa fa-credit-card mr-1"></i> クレジットカード</strong>
                        <p class="text-muted">
                            <% creditCards.forEach((creditCard) => { %>
                            <%= creditCard.holderName %><br>
                            <%= creditCard.cardNo %><br>
                            <% }) %>
                        </p>
                        <hr>

                        <strong><i class="fa fa-piggy-bank mr-1"></i> コイン口座</strong>
                        <p class="text-muted">
                            <% coinAccounts.forEach((ownershipInfo) => { %>
                            <% const account = ownershipInfo.typeOfGood %>
                            <span class="badge <%= account.accountType %>">
                                <%= account.accountType %>
                            </span>
                            <a target="_blank" href="<%= process.env.PECORINO_CONSOLE_ENDPOINT %>/accounts/<%= account.accountType %>/<%= account.accountNumber %>">
                                <%= account.accountNumber %>
                            </a>
                            <span class="badge <%= account.status %>">
                                <%= account.status %>
                            </span>
                            <br>
                            <% }) %>
                        </p>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#orders" data-toggle="tab">注文履歴</a></li>
                            <li class="nav-item"><a class="nav-link" href="#jsonViewer" data-toggle="tab">JSON Viewer</a></li>
                            <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Settings</a></li>
                            <li class="nav-item"><a class="nav-link" href="#others" data-toggle="tab">その他の操作</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="orders">
                                <div class="table-responsive">
                                    <table class="table m-0">
                                        <thead>
                                            <tr>
                                                <th>Order Number</th>
                                                <th>Order Date</th>
                                                <th>Item</th>
                                                <th>Payment Method</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>

                            <div class="tab-pane" id="jsonViewer">
                                <h4>Person</h4>
                                <div class="form-group">
                                    <textarea class="form-control person" rows="20" placeholder="" disabled=""><%= JSON.stringify(person, null, '\t') %></textarea>
                                </div>
                                <h4>クレジットカード</h4>
                                <div class="form-group">
                                    <textarea class="form-control" rows="20" placeholder="" disabled=""><%= JSON.stringify(creditCards, null, '\t') %></textarea>
                                </div>
                                <h4>コイン口座</h4>
                                <div class="form-group">
                                    <textarea class="form-control" rows="20" placeholder="" disabled=""><%= JSON.stringify(coinAccounts, null, '\t') %></textarea>
                                </div>
                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="settings">
                                <!-- form start -->
                                <form role="form" method="post">
                                </form>
                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="others">
                                <!-- general form elements -->
                                <div class="card card-dark">
                                    <!-- <div class="card-header">
                                        <h3 class="card-title">その他の操作</h3>
                                    </div> -->
                                    <!-- /.card-header -->

                                    <!-- <div class="card-body">
                                        <button type="button" class="delete btn btn-danger">削除する</button>
                                    </div> -->
                                    <!-- /.card-body -->
                                    <!-- <div class="card-footer">
                                        </div> -->
                                </div>
                                <!-- /.card -->
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<script src="/js/people/show.js"></script>